@using LGMPulse.WebApp.Models
@model HealthyDashViewModel;
@{
    ViewBag.Title = ViewBag.Title ?? "LAGAMA Pulse";
}

@section style {
    <style>

        :root {
            --sphere-income-start: #b8f0c6;
            --sphere-income-end: #4f7a46;
            --sphere-expense-start: #ffcfcf;
            --sphere-expense-end: #9b463f;
            --sphere-yellow-start: #fff2c8;
            --sphere-yellow-end: #C89A3A;
            --sphere-blue-start: #8ac7e8;
            --sphere-blue-end: #3a6a86;
            --sphere-shadow: rgba(0,0,0,0.18);
            --sphere-highlight: rgba(255,255,255,0.65);
            --insight-bg-start: #faf1d7;
            --insight-bg-end: #f4e4b6;
            --insight-text: #4c3a00;
            --sphere-bigger: 160px;
            --sphere-smaller: 140px;
        }

        #HealthSnapshotPanel {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem 1.2rem;
            gap: 1.5rem;
            max-height: 100%;
        }

        /* ---- ESFERAS ---- */

        .sphere {
            position: relative;
            display: flex;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            box-shadow: -4px -4px 10px rgba(255,255,255,0.25), 12px 14px 35px rgba(0,0,0,0.45), inset -10px -12px 30px rgba(0,0,0,0.45), inset 6px 6px 12px rgba(255,255,255,0.25);
            font-family: "Segoe UI", sans-serif;
            color: #5f4800;
            /* SEM ANIMAÇÃO DE ENTRADA */
            opacity: 1;
            transform: scale(1);
            /* transição suave apenas para clique */
            transition: transform 0.18s ease;
        }

            .sphere:active {
                transform: scale(1.08);
            }

            .sphere label {
                pointer-events: none;
                font-size: 0.85rem;
                font-weight: 500;
                color: inherit;
                opacity: 0.85;
                margin-bottom: 2px;
            }

            .sphere span {
                font-size: 1.25rem;
                font-weight: 600;
                color: inherit;
            }

            .sphere.big {
                width: var(--sphere-bigger);
                height: var(--sphere-bigger);
            }

            .sphere.small {
                width: var(--sphere-smaller);
                height: var(--sphere-smaller);
            }

            .sphere.yellow {
                background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-yellow-start), var(--sphere-yellow-end));
            }

            .sphere.blue {
                background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-blue-start), var(--sphere-blue-end));
            }

        .sphereText {
            position: absolute;
            display: flex;
            flex-direction: column;
            align-items: center;
            pointer-events: none;
            transform: rotate(var(--sphere-tilt, 0deg));
            transform-origin: center center;
            transition: transform 0.18s ease;
        }

        .sphere:active .sphereText {
            transform: rotate(var(--sphere-tilt, 0deg)) scale(1.10);
        }

        #incomeCircle {
            background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-income-start), var(--sphere-income-end));
            margin-left: -110px;
            --sphere-tilt: -12deg;
        }

        #expensesCircle {
            background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-expense-start), var(--sphere-expense-end));
            margin-right: -110px;
            --sphere-tilt: 10deg;
        }

        #liquidCircle {
            width: 180px;
            height: 180px;
            margin-left: 26px;
            --sphere-tilt: -6deg;
        }

        /* ---- FRASE DE INSIGHT ---- */
        #healthyPanel {
            margin-top: 1rem;
            padding: 1rem 1.2rem;
            font-size: 1.2rem;
            font-weight: 500;
            color: var(--insight-text);
            text-align: center;
            font-family: "Segoe UI", sans-serif;
            background: rgba(255,255,255,0.55);
            backdrop-filter: blur(3px);
            border-radius: 14px;
            box-shadow: 0 6px 14px rgba(0,0,0,0.12);
        }

        /* Botão flutuante (inalterado) */
        .pulse-fab {
            position: fixed;
            bottom: var(--space-6);
            right: var(--space-6);
            width: 62px;
            height: 62px;
            border-radius: 50%;
            background: var(--pulse-blue);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.2rem;
            cursor: pointer;
            box-shadow: var(--shadow-hover);
            transition: var(--pulse);
        }

            .pulse-fab:active {
                transform: scale(0.92);
            }

    </style>
}

<div id="HealthSnapshotPanel">
    <div id="incomeCircle" class="sphere">
        <div class="sphereText">
            <label>Receitas</label>
            <span>@string.Format("{0:C2}", Model.TotalReceitas)</span>
        </div>
    </div>

    <div id="expensesCircle" class="sphere">
        <div class="sphereText">
            <label>Despesas</label>
            <span>@string.Format("{0:C2}", Model.TotalDespesas)</span>
        </div>
    </div>

    <div id="liquidCircle" class="sphere">
        <div class="sphereText">
            <label>Liquidez</label>
            <span>@string.Format("{0:C2}", Model.TotalReceitas - Model.TotalDespesas)</span>
        </div>
    </div>

    <div id="healthyPanel">
        <span>Você está @( Math.Round(Model.PercDiferenca) )% melhor que no mês passado</span>
    </div>
</div>

@section script {
    <script>
        function RefreshSpheres() {
            const income = parseFloat("@Model.TotalReceitas".replace(",", "."));
            const expenses = parseFloat("@Model.TotalDespesas".replace(",", "."));

            const $income = $("#incomeCircle");
            const $expenses = $("#expensesCircle");
            const $liquid = $("#liquidCircle");

            // limpa classes anteriores
            $income.removeClass("big small");
            $expenses.removeClass("big small");
            $liquid.removeClass("blue yellow");

            // regra principal Receita vs Despesa
            if (income > expenses) {
                $income.addClass("big");
                $expenses.addClass("small");
            } else if (expenses > income) {
                $expenses.addClass("big");
                $income.addClass("small");
            } else {
                $income.addClass("small");
                $expenses.addClass("small");
            }

            // liquidez
            const liquidValue = income - expenses;
            if (liquidValue >= 0) {
                $liquid.addClass("blue");
            } else {
                $liquid.addClass("yellow");
            }
        }

        $(document).ready(function () {
            RefreshSpheres();
        });
    </script>
}
