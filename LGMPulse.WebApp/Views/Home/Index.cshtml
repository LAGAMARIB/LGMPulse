@using LGMDomains.Common.Helpers
@using LGMPulse.WebApp.Models
@model HealthyDashViewModel;
@{
    Layout = "_overview";
    ViewBag.Title = ViewBag.Title ?? "LAGAMA Pulse";
    DateTime hoje = DateTimeHelper.Now();
    bool IsMesAtual = Model.Year == hoje.Year && Model.Month == hoje.Month;
    string MesReferencia = DateTimeHelper.MesReferencia(Model.Year, Model.Month);
    var perc = Math.Round(Model.PercDiferenca);
    var isNegative = perc < 0;
    var absPerc = Math.Abs(perc);
    var texto = isNegative
        ? $"Você está {absPerc}% abaixo do mês passado"
        : $"Você está {absPerc}% melhor que no mês passado";
    int dia = IsMesAtual ? hoje.Day : 1;
    ViewBag.DataLancto = new DateTime(Model.Year, Model.Month, dia); // gerar mes referencia para _overview
}

@section style {
    <style>

        :root {
            --sphere-bigger: 160px;
            --sphere-smaller: 140px;
        }

        /* ===== LAYOUT BASE ===== */

        #HealthSnapshotPanel {
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
            padding-bottom: 15px;
        }

        /* ===== ESFERAS (PARTE SUPERIOR) ===== */

        .area-esferas {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 1.2rem;
            width: 100%;
            padding-top: 1rem;
        }

        .sphere {
            position: relative;
            display: flex;
            aspect-ratio: 1 / 1;
            width: var(--sphere-bigger);
            flex: 0 0 auto;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
            box-shadow: -4px -4px 10px rgba(255,255,255,0.25), 12px 14px 35px rgba(0,0,0,0.45), inset -10px -12px 30px rgba(0,0,0,0.45), inset 6px 6px 12px rgba(255,255,255,0.25);
            font-family: "Segoe UI", sans-serif;
            color: #5f4800;
            box-sizing: border-box;
            contain: layout paint;
            transition: transform 0.18s ease;
        }

            .sphere:active {
                transform: scale(1.08);
            }

            .sphere.big {
                width: var(--sphere-bigger);
            }

            .sphere.small {
                width: var(--sphere-smaller);
            }

        .sphereText {
            position: absolute;
            display: flex;
            flex-direction: column;
            align-items: center;
            pointer-events: none;
            transform: rotate(var(--sphere-tilt, 0deg));
            transition: transform 0.18s ease;
        }

        .sphere:active .sphereText {
            transform: rotate(var(--sphere-tilt, 0deg)) scale(1.1);
        }

        .sphere label {
            font-size: 0.85rem;
            font-weight: 500;
            opacity: 0.85;
        }

        .sphere span {
            font-size: 1.25rem;
            font-weight: 600;
        }

        /* ===== CORES ===== */

        #incomeCircle {
            background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-income-start), var(--sphere-income-end));
            --sphere-tilt: -12deg;
        }

        #expensesCircle {
            background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-expense-start), var(--sphere-expense-end));
            --sphere-tilt: 10deg;
        }

        #liquidCircle {
            width: 180px;
            height: 180px;
            --sphere-tilt: -6deg;
        }

            #liquidCircle span {
                font-size: 1.55rem;
            }

            #liquidCircle.blue {
                background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-blue-start), var(--sphere-blue-end));
            }

            #liquidCircle.yellow {
                background: radial-gradient(circle at 30% 30%, var(--sphere-highlight), transparent 40%), linear-gradient(145deg, var(--sphere-yellow-start), var(--sphere-yellow-end));
            }

        /* ===== PAINEL INFERIOR ===== */
        .area-display {
            display: flex;
            justify-content: center;
            width: 100%;
            padding: 1rem;
        }

        #healthyPanel {
            width: 100%;
            max-width: 520px;
            padding: 1rem 1.2rem;
            font-size: 1.2rem;
            font-weight: 500;
            color: var(--insight-text);
            text-align: center;
            font-family: "Segoe UI", sans-serif;
            background: var(--branco-transparente);
            backdrop-filter: blur(3px);
            border-radius: 14px;
            box-shadow: 0 6px 14px var(--preto-sombra);
        }

        /* ===== MÊS ===== */
        .month-nav {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 8px 2px;
            margin-bottom: 0.6rem;
            font-size: 0.9rem;
            background: transparent;
        }

        #currentMonthLabel {
            font-weight: 500;
            user-select: none;
            white-space: nowrap;
        }

        .month-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.95rem;
            opacity: 0.75;
            cursor: pointer;
            transition: transform .15s ease, opacity .15s ease;
        }

            .month-btn:hover {
                opacity: 1;
            }

            .month-btn:active {
                transform: translateY(-50%) scale(0.9);
            }

            .month-btn.prev {
                left: 8px;
            }

            .month-btn.next {
                right: 8px;
            }

        .insight-text {
            font-size: 1.15rem;
            font-weight: 500;
        }

        @@media screen and (min-width: 800px) {
            .area-esferas {
                flex-direction: row;
                justify-content: center;
                align-items: center;
                gap: 1.5rem;
                flex-wrap: wrap;
                padding-top: 1.5rem;
            }

            .month-nav {
                padding: 0;
            }
        }

    </style>
}

<div id="HealthSnapshotPanel">
    <div class="area-esferas">
        <div id="incomeCircle" class="sphere">
            <div class="sphereText">
                <label>Receitas</label>
                <span>@string.Format("{0:C2}", Model.TotalReceitas)</span>
            </div>
        </div>

        <div id="expensesCircle" class="sphere">
            <div class="sphereText">
                <label>Despesas</label>
                <span>@string.Format("{0:C2}", Model.TotalDespesas)</span>
            </div>
        </div>

        <div id="liquidCircle" class="sphere">
            <div class="sphereText">
                <label>Liquidez</label>
                <span>@string.Format("{0:C2}", Model.TotalReceitas - Model.TotalDespesas)</span>
            </div>
        </div>
    </div>

    <div class="area-display">
        <div id="healthyPanel">
            <div class="month-nav">
                <i class="fas fa-chevron-left month-btn prev" id="prevMonth"></i>
                <span id="currentMonthLabel">@MesReferencia</span>
                @if (!IsMesAtual)
                {
                    <i class="fas fa-chevron-right month-btn next" id="nextMonth"></i>
                }
            </div>

            <div class="insight-text">
                <span>@texto</span>
            </div>
        </div>
    </div>

</div>


@section script {
    <script>
        let currentYear = @Model.Year;
        let currentMonth = @Model.Month; 

        function navigateMonth(offset) {
            currentMonth += offset;

            if (currentMonth === 0) {
                currentMonth = 12;
                currentYear--;
            }

            if (currentMonth === 13) {
                currentMonth = 1;
                currentYear++;
            }

            // versão simples: reload com querystring
            window.location.href = `/Home/Index?ano=${currentYear}&mes=${currentMonth}`;
        }

        function RefreshSpheres() {
            const income = parseFloat("@Model.TotalReceitas".replace(",", "."));
            const expenses = parseFloat("@Model.TotalDespesas".replace(",", "."));

            const $income = $("#incomeCircle");
            const $expenses = $("#expensesCircle");
            const $liquid = $("#liquidCircle");


            $income.removeClass("big small");
            $expenses.removeClass("big small");
            $liquid.removeClass("blue yellow");

            if (income > expenses) {
                $income.addClass("big");
                $expenses.addClass("small");
            } else if (expenses > income) {
                $expenses.addClass("big");
                $income.addClass("small");
            } else {
                $income.addClass("small");
                $expenses.addClass("small");
            }

            const liquidValue = income - expenses;
            if (liquidValue >= 0) {
                $liquid.addClass("blue");
            } else {
                $liquid.addClass("yellow");
            }

            moveSpheres();
        }

        function moveSpheres() {
            const spheres = ["#incomeCircle", "#expensesCircle", "#liquidCircle"];

            spheres.forEach(id => {
                const el = $(id);

                // entre -60px e +60px (mais elegante no desktop)
                const randomOffset = Math.floor(Math.random() * 120) - 60;

                el.css("transform", `translateX(${randomOffset}px) rotate(var(--sphere-tilt, 0deg))`);
            });
        }

        function navigateMonth(offset) {
            currentMonth += offset;

            if (currentMonth === 0) {
                currentMonth = 12;
                currentYear--;
            }

            if (currentMonth === 13) {
                currentMonth = 1;
                currentYear++;
            }

            window.location.href = `/Home/Index?ano=${currentYear}&mes=${currentMonth}`;
        }

        $(document).ready(function () {
            $("#prevMonth").click(() => navigateMonth(-1));
            $("#nextMonth").click(() => navigateMonth(1));

            $("#incomeCircle").on("click", function () {
                window.location.href = `/relatorios/extrato/${currentYear}/${currentMonth}/0`;
            });

            $("#expensesCircle").on("click", function () {
                window.location.href = `/relatorios/extrato/${currentYear}/${currentMonth}/1`;
            });

            $("#liquidCircle").on("click", function() {
                window.location.href = `/relatorios/extrato/${currentYear}/${currentMonth}`;
            });

            DisableIcon(1);
            RefreshSpheres();
        });
    </script>
}


