@model AgendaViewModel
@using System.Text.Json
@using System.Globalization
@using LGMDomains.Common.Helpers
@using LGMPulse.Domain.Enuns
@using LGMPulse.WebApp.Models
@{
    Layout = "_overview";
    ViewBag.Title = ViewBag.Title ?? "Agendamento";
    ViewBag.IsAgenda = true;
    ViewBag.DataLancto = Model.Date;
    decimal? valorTotalDespesas = 0;
    decimal? valorTotalReceitas = 0;
    string MesReferencia = Model.IsOnlyOneDay ?
                            Model.Date.ToShortDateString() :
                            DateTimeHelper.MesReferencia(Model.Year, Model.Month);
}

@section style {
    <style>
        /* ===== CONTAINER PRINCIPAL ===== */
        #ExtratoContainer {
            display: flex;
            flex-direction: column;
            height: calc(100% - 80px);
            background: transparent;
            overflow: hidden; /* scroll só no miolo */
            box-sizing: border-box;
            padding-bottom: 2px;
        }

        /* ===== BARRA SUPERIOR FIXA ===== */
        #ExtratoHeader {
            flex: 0 0 56px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-3);
            background: transparent;
            z-index: 20;
        }

        /* ===== BOTÃO FECHAR ===== */
        #btnFecharForm {
            width: 44px;
            height: 44px;
            padding: 10px;
            border-radius: 12px;
            cursor: pointer;
            background: var(--branco-transparente);
            backdrop-filter: blur(3px);
            box-shadow: 0 6px 14px var(--preto-sombra);
            transition: transform 160ms ease, background 160ms ease, box-shadow 160ms ease, opacity 160ms ease;
        }

            #btnFecharForm:hover {
                background: rgba(255,255,255,0.75);
                opacity: 0.95;
            }

            #btnFecharForm:active {
                transform: scale(0.88) rotate(-6deg);
                box-shadow: 0 3px 8px var(--preto-sombra);
            }

        /* ===== ÁREA SCROLLÁVEL ===== */
        #ExtratoItems {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: var(--space-2);
            padding: var(--space-4);
            margin-bottom: 10px;
            background: linear-gradient( 180deg, var(--color-soft-bg), var(--bg-3) );
            overflow-y: auto;
            overscroll-behavior: contain;
        }

        /* ===== LINHA DO MOVIMENTO ===== */
        .row-movto {
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            overflow: hidden;
            grid-template-columns: 44px 1fr auto;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-3) var(--space-4);
            background: var(--branco-transparente);
            backdrop-filter: blur(3px);
            border-radius: var(--radius);
            box-shadow: 0 4px 12px var(--preto-sombra);
            max-height: 57px;
            transition: max-height 0.75s ease;
        }

            .row-movto:hover {
                background: rgba(255,255,255,0.7);
                transform: translateY(-1px);
            }

            /* Ícone */
            .row-movto .col-1 {
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .row-movto .col-1 img {
                    width: 28px;
                    height: 28px;
                    object-fit: contain;
                    opacity: 0.9;
                }

            /* Data + descrição */
            .row-movto .col-2 {
                display: flex;
                flex-direction: column;
                gap: 2px;
                line-height: 1.25;
            }

                .row-movto .col-2 span:first-child {
                    font-size: 0.75rem;
                    color: var(--text-3);
                }

                .row-movto .col-2 span:last-child {
                    font-size: 0.95rem;
                    color: var(--text-1);
                    font-weight: 500;
                }

            /* Valor */
            .row-movto .col-3 {
                font-size: 1rem;
                font-weight: 600;
                text-align: right;
                white-space: nowrap;
            }

            .row-movto.receita .col-3 {
                color: var(--pulse-green);
            }

            .row-movto.despesa .col-3 {
                color: var(--pulse-red);
            }

            .row-movto.receita {
                border-left: 4px solid var(--border-movto-receita);
            }

            .row-movto.despesa {
                border-left: 4px solid var(--border-movto-despesa);
            }

        /* conteúdo principal */
        .row-content {
            display: grid;
            grid-template-columns: 44px 1fr auto;
            align-items: center;
            gap: var(--space-3);
            width: 100%;
        }

        /* toolbar (rodapé oculto) */
        .row-toolbar {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 90px;
            padding: 14px 8px 0px;
            margin-top: 10px;
            border-top: 1px solid var(--border-soft);
            opacity: 0;
            max-height: 0;
            pointer-events: none;
            transition: opacity 0.25s ease, max-height 0.75s ease;
        }

        /* estado expandido */
        .row-movto.expanded {
            padding-bottom: var(--space-5);
            box-shadow: var(--shadow-hover);
            transform: scale(1.015);
            max-height: 160px;
        }

            .row-movto.expanded .row-toolbar {
                opacity: 1;
                max-height: 80px;
                pointer-events: auto;
            }

        /* ícones */
        .row-toolbar i {
            font-size: 1.6rem;
            cursor: pointer;
            opacity: 0.9;
            transition: transform 0.15s ease, opacity 0.15s ease;
        }

            .row-toolbar i:active {
                transform: scale(0.95);
            }

            .row-toolbar i:hover {
                opacity: 1;
                transform: scale(1.15);
            }

        /* editar */
        .row-toolbar .btn-edit {
            color: var(--pulse-blue);
        }

        /* excluir */
        .row-toolbar .btn-delete {
            color: var(--pulse-red);
        }

        .divSumary {
            width: 100%;
            max-width: 360px;
            margin: 14px auto;
            background: var(--background-light);
            border-radius: var(--radius);
            box-shadow: var(--shadow-soft);
            padding: var(--space-2);
        }

        .itemTotal {
            display: grid;
            grid-template-columns: 50px 1fr auto;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-bottom: 1px dashed var(--background-border);
            margin-bottom: 6px;
        }

            .itemTotal:last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

            .itemTotal i {
                font-size: 24px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .itemTotal span {
                font-size: 1.05rem;
            }

                .itemTotal span:nth-child(2) {
                    font-weight: bold;
                }

                .itemTotal span:last-child {
                    font-size: 1.15rem;
                    font-weight: bold;
                    text-align: right;
                }

        .valReceita {
            color: var(--cor-receita);
        }

        .valDespesa {
            color: var(--cor-despesa);
        }

        .empty-message {
            text-align: center;
            font-size: 1.5rem;
        }

    </style>
}

<div id="ExtratoContainer">
    <div id="ExtratoHeader">
        <strong>@string.Format("{0} - {1}", "AGENDAMENTO", MesReferencia)</strong>
        <img class="close-icon" src="/icons/xmark.svg" id="btnFecharForm" />
    </div>
    <div id="ExtratoItems">
        @if (Model.Agendas.Count == 0)
        {
            <div class="empty-message">
                <i class="fas fa-box-open"></i>
                <h5>Nenhum registro encontrado</h5>
            </div>
        }
        else
        {
            @foreach (var agenda in Model.Agendas)
            {
                var descMovto = (string.IsNullOrEmpty(agenda.Descricao) ? agenda.NomeGrupo : agenda.Descricao) +
                                (agenda.QtdParcelas > 1 ?
                                " (" + agenda.Parcela + "/" + agenda.QtdParcelas + ")" : "");
                var classTipo = (agenda.TipoMovto == TipoMovtoEnum.Receita ? "receita" : "despesa");
                if (agenda.TipoMovto == TipoMovtoEnum.Despesa)
                    valorTotalDespesas += agenda.ValorParcela;
                else
                    valorTotalReceitas += agenda.ValorParcela;

                <div class="row-movto @classTipo">
                    <div class="row-content">
                        <div class="col-1">
                            <img src="@agenda.ImagePathGrupo" alt="@agenda.NomeGrupo" />
                        </div>
                        <div class="col-2">
                            <span>@agenda.DataVencto!.Value.ToShortDateString()</span>
                            <span><b>@descMovto</b></span>
                        </div>
                        <div class="col-3">
                            <span>@string.Format("{0:C2}", agenda.ValorParcela)</span>
                        </div>
                    </div>

                    <div class="row-toolbar">
                        <i class="fas fa-keyboard btn-edit" data-movto="@agenda.ID" title="Editar"></i>
                        <i class="fas fa-trash btn-delete" 
                            data-movto="@agenda.ID" 
                            data-numparcs = "@agenda.QtdParcelas"
                            title="Excluir"></i>
                    </div>
                </div>
            }
        }
    </div>
    <div class="divSumary">
        <div class="itemTotal valReceita">
            <i class="fas fa-money-bill-alt"></i>
            <span>Receitas</span>
            <span>@(string.Format("{0:C2}", valorTotalReceitas))</span>
        </div>
        <div class="itemTotal valDespesa">
            <i class="fas fa-money-bill-alt"></i>
            <span>Despesas</span>
            <span>@(string.Format("{0:C2}", valorTotalDespesas))</span>
        </div>
    </div>
</div>


@section script {
    <script>
        const year = Number('@Model.Year');
        const month = Number('@Model.Month');
        const day = Number('@Model.Day');
        const isOnlyOneDay = @Model.IsOnlyOneDay.ToString().ToLower();

        function ExcluirRegistro(id) {
            $.post(`/agenda/delete/${id}`, null, function(result) {
                if (result.IsSuccess) {
                    window.location.reload();
                } else {
                    alert(result.Message);
                }
            })
            .fail(function(jqXHR, textStatus, errorThrown) {
                alert('Erro ao tentar remover o registro: ' + errorThrown);
            });
        }

        $(document).ready(function () {
            $('#btnFecharForm').on('click', function () {
                window.location.href = `/agenda/${year}/${month}`;
            });

            $(".row-movto").on("click", function (e) {

                // evita conflito se clicar direto nos ícones depois
                if ($(e.target).closest(".row-toolbar").length) return;

                const $current = $(this);

                // colapsa todos os outros
                $(".row-movto").not($current).removeClass("expanded");

                // alterna o atual
                $current.toggleClass("expanded");
            });

            $('.btn-edit').on("click", function (e) {
                const IDMovto = $(this).data('movto');
                editOverlay(IDMovto);
            });

            $('.btn-delete').on("click", function (e) {
                const id = $(this).data('movto');
                const qtdParcs = parseInt($(this).data('numparcs'), 10) || 1;
                console.log(`${id}-${qtdParcs}`);
                let mens = 'Tem certeza que deseja remover o agendamento?'
                if (qtdParcs > 1)
                    mens += ' Todas as parcelas seguintes pendentes também serão removidas.'
                showModalDialog({
                    titulo: 'Excluir',
                    mensagem: mens,
                    tipo: 'excluir', //excluir, info, confirmar, alertar
                    onConfirm: () => {
                        ExcluirRegistro(id);
                    }
                });

            });

             if (!isOnlyOneDay) {
                 $('#addButton').hide();
             }
            DisableIcon(2);
        });
    </script>
}
