@using LGMPulse.Domain.ViewModels
@using LGMPulse.Domain.Enuns
@model RelatGrupoViewModel
@{
    Layout = null;

    var maxReceitas = Model.Grupos.Any(x => x.TipoMovto == TipoMovtoEnum.Receita)
        ? Model.Grupos.Where(x => x.TipoMovto == TipoMovtoEnum.Receita).Max(g => g.ValorGrupo)
        : 1;

    var maxDespesas = Model.Grupos.Any(x => x.TipoMovto == TipoMovtoEnum.Despesa)
        ? Model.Grupos.Where(x => x.TipoMovto == TipoMovtoEnum.Despesa).Max(g => g.ValorGrupo)
        : 1;
}

<style>
    :root {
        --bar-height: 38px;
        --bar-radius: 10px;
        --bar-receita: var(--pulse-green);
        --bar-despesa: var(--pulse-red);
        --bar-bg: rgba(255,255,255,0.45);
        --text-label: var(--text-1);
        --text-value: var(--text-2);
    }

    #relatorioGrupos {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 20px 5px;
    }

    .grupo-section {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        background: linear-gradient(145deg, var(--section-begin), var(--section-end));
        padding: 10px;
        border-radius: 15px;
    }

    .grupo-title {
        font-size: 1.1rem;
        font-weight: 600;
        opacity: .85;
        letter-spacing: .3px;
    }

    .bar-row {
        display: grid;
        grid-template-columns: 180px 1fr auto;
        align-items: center;
        gap: 1rem;
    }

    .bar-label {
        font-size: .95rem;
        color: var(--text-label);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .bar-track {
        height: var(--bar-height);
        background: var(--bar-bg);
        border-radius: var(--bar-radius);
        overflow: hidden;
        position: relative;
    }

    .bar-fill {
        height: 100%;
        border-radius: var(--bar-radius);
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: .75rem;
        font-size: .85rem;
        font-weight: 600;
        color: rgba(255,255,255,0.9);
        white-space: nowrap;
        transition: width .4s ease;
    }

        .bar-fill.receita {
            background: var(--pulse-green);
        }

        .bar-fill.despesa {
            background: var(--pulse-red);
        }

    .bar-value {
        font-size: .95rem;
        font-weight: 600;
        color: var(--text-value);
        white-space: nowrap;
    }

    @@media (max-width: 720px) {
        .bar-row

        {
            grid-template-columns: 1fr;
            gap: .4rem;
        }

        .bar-value {
            text-align: right;
        }

    }
</style>

<div id="relatorioGrupos">

    <!-- RECEITAS -->
    <div class="grupo-section">
        <div class="grupo-title">Receitas</div>

        @foreach (var g in Model.Grupos.Where(g => g.TipoMovto == TipoMovtoEnum.Receita))
        {
            var perc = (g.ValorGrupo / maxReceitas) * 100m;

            <div class="bar-row">
                <div class="bar-label">@g.DescGrupo</div>

                <div class="bar-track">
                    <div class="bar-fill receita" style="width:@perc.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)%">
                    </div>
                </div>

                <div class="bar-value">
                    @string.Format("{0:C2}", g.ValorGrupo)
                </div>
            </div>
        }
    </div>

    <!-- DESPESAS -->
    <div class="grupo-section">
        <div class="grupo-title">Despesas</div>

        @foreach (var g in Model.Grupos.Where(g => g.TipoMovto == TipoMovtoEnum.Despesa))
        {
            var perc = (g.ValorGrupo / maxDespesas) * 100m;

            <div class="bar-row">
                <div class="bar-label">@g.DescGrupo</div>

                <div class="bar-track">
                    <div class="bar-fill despesa" style="width:@perc.ToString("0.##", System.Globalization.CultureInfo.InvariantCulture)%">
                    </div>
                </div>

                <div class="bar-value">
                    @string.Format("{0:C2}", g.ValorGrupo)
                </div>
            </div>
        }
    </div>

</div>

<script>
    $(document).ready(function () {
        localStorage.setItem('ultimoRelatorio', 'grupos');
    });
</script>
