@using LGMDomains.Common.Helpers
@using LGMPulse.Domain.ViewModels
@model MapaFinanceiroViewModel
@{
    Layout = null;
    string[] monthName = {"Jan", "Fev", "Mar", "Abr", "Mai", "Jun",
                          "Jul", "Ago", "Set", "Out", "Nov", "Dez",
                          "Total", "Média"};
}

<style>
    .report-container {
        height: 100%;
        max-height: 100%;
        overflow: hidden; /* 🔑 container NÃO rola */
        background-color: var(--background-body);
        padding: 8px;
        box-sizing: border-box;
        margin-top: 10px;
    }

    .mapa-scroll {
        height: 100%;
        position: relative;
        overflow: auto; /* 🔑 scroll ÚNICO aqui */
    }

        /* máscara que cobre qualquer pixel vazado à esquerda */
        .mapa-scroll::before {
            content: "";
            position: sticky;
            left: 0;
            top: 0;
            width: 140px; /* mesma largura da coluna fixa */
            height: 100%;
            background: var(--background-body);
            z-index: 90; /* abaixo da coluna fixa, acima das colunas móveis */
            pointer-events: none;
        }

    .mapa-container {
        display: flex;
        flex-direction: column;
        width: max-content;
        min-width: 100%;
        border: 1px solid var(--grid-lines);
        font-size: 13px;
    }

    .mapa-headers {
        position: sticky;
        top: 0;
        background: var(--form-container-bg);
    }

    .mapa-header,
    .mapa-row {
        display: flex;
        width: max-content;
        min-width: 100%;
    }

    .mapa-header {
        border-bottom: 1px solid var(--background-border);
    }

    .mapa-body {
        display: flex;
        flex-direction: column;
    }

    .mapa-col-fixed {
        width: 140px;
        min-width: 140px;
        max-width: 140px;
        padding: 6px 8px;
        position: sticky;
        left: 0;
        z-index: 100;
        border-right: 1px solid var(--background-border);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .mapa-row {
        min-height: 34px;
    }

        .mapa-row:nth-child(even) {
            background-color: var(--color-sand);
        }

        .mapa-row:nth-child(odd) {
            background-color: var(--background-body);
        }

        .mapa-row:nth-child(even) .mapa-col-fixed {
            background-color: var(--color-sand);
        }

        .mapa-row:nth-child(odd) .mapa-col-fixed {
            background-color: var(--background-body);
        }

    .mapa-header .mapa-col-fixed {
        background: var(--form-container-bg);
        font-weight: bold;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .mapa-col {
        min-width: 90px;
        padding: 6px 8px;
        text-align: right;
        border-right: 1px solid var(--grid-lines);
        font-size: 0.85rem;
    }

    .mapa-header .mapa-col {
        font-weight: bold;
        text-align: right;
        background: var(--form-container-bg);
        color: var(--cor-texto-card-header);
        text-transform: uppercase;
        font-size: 0.8rem;
    }

    .mapa-col-bold {
        font-weight: bolder;
    }

    .col-total {
        border-left: 2px solid var(--background-border);
        background: linear-gradient(to bottom, rgba(0,0,0,0.03), rgba(0,0,0,0.06));
    }

    .receita {
        color: var(--cor-receita);
    }

    .despesa {
        color: var(--cor-despesa);
    }

    .liquidez-positiva {
        background-color: rgba(46, 204, 113, 0.12);
        font-weight: 600;
    }

    .liquidez-negativa {
        background-color: rgba(231, 76, 60, 0.12);
        font-weight: 600;
    }

    .nomeGrupo {
        display: none;
    }

    .receita {
        color: var(--cor-receita);
    }

    .free-hidden {
        filter: blur(4px);
        cursor: pointer;
    }

    .despesa {
        color: var(--cor-despesa);
    }

    /* === Indicador de ordenação === */
    .mapa-col.sortable {
        cursor: pointer;
        position: relative;
        padding-right: 18px; /* espaço pro ícone */
    }

        .mapa-col.sortable::after {
            content: "";
            position: absolute;
            right: 6px;
            top: 50%;
            transform: translateY(-50%);
            border-left: 5px solid transparent;
            border-right: 5px solid transparent;
            opacity: 0.6;
        }

        .mapa-col.sortable.asc::after {
            border-bottom: 7px solid var(--cor-texto-card-header, #111);
        }

        .mapa-col.sortable.desc::after {
            border-top: 7px solid var(--cor-texto-card-header, #111);
        }


    @@media (min-width: 640px) {
        .nomeGrupo
        {
            display: inline;
        }

    }

    @@media (max-width: 639px) {
        .mapa-col-fixed
        {
            font-weight: 600;
        }

        .nomeGrupo {
            display: block;
            line-height: 1.2;
        }

    }

    @@media (min-width: 800px) {
        .mapa-col-fixed {
            min-width: 170px;
        }
    }
</style>

@await Html.PartialAsync("_FreeModeModal")

<div class="report-container">
    <div class="mapa-scroll">
        <div id="gridMapa" class="mapa-container">

            <!-- HEADERS -->
            <div class="mapa-headers">

                <div class="mapa-header">
                    <div class="mapa-col-fixed">Grupo</div>
                    @for (int i = 0; i < 14; i++)
                    {
                        if (i < 12 && i > Model.LastMonth - 1) continue;
                        string colTotal = (i == 12 ? "col-total" : "");
                        <div class="mapa-col @colTotal">@monthName[i]</div>
                    }
                </div>

                <div class="mapa-header receita">
                    <div class="mapa-col-fixed">Receitas</div>
                    @for (int i = 0; i < 14; i++)
                    {
                        if (i < 12 && i > Model.LastMonth - 1) continue;
                        string colTotal = (i == 12 ? "col-total" : "");
                        string classHidden = i < (Model.FirstMonthToShow - 1) || i > (Model.LastMonthToShow - 1) ? "free-hidden" : "";
                        <div class="mapa-col receita @colTotal @classHidden">
                            @(string.IsNullOrWhiteSpace(classHidden) ? Model.Receitas.TotalMes[i].ToString("N2") : "000,00")
                        </div>
                    }
                </div>

                <div class="mapa-header despesa">
                    <div class="mapa-col-fixed">Despesas</div>
                    @for (int i = 0; i < 14; i++)
                    {
                        if (i < 12 && i > Model.LastMonth - 1) continue;
                        string colTotal = (i == 12 ? "col-total" : "");
                        string classHidden = i < (Model.FirstMonthToShow - 1) || i > (Model.LastMonthToShow - 1) ? "free-hidden" : "";
                        <div class="mapa-col despesa @colTotal @classHidden">
                            @(string.IsNullOrWhiteSpace(classHidden) ? Model.Despesas.TotalMes[i].ToString("N2") : "000,00")
                        </div>
                    }
                </div>

                <div class="mapa-header">
                    <div class="mapa-col-fixed">Liquidez</div>
                    @for (int i = 0; i < 14; i++)
                    {
                        if (i < 12 && i > Model.LastMonth - 1) continue;
                        string colTotal = (i == 12 ? "col-total" : "");
                        decimal liquidez = Model.Receitas.TotalMes[i] - Model.Despesas.TotalMes[i];
                        string liquidezClass = liquidez < 0
                        ? "liquidez-negativa despesa"
                        : "liquidez-positiva receita";
                        string classHidden = i < (Model.FirstMonthToShow - 1) || i > (Model.LastMonthToShow - 1) ? "free-hidden" : "";
                        <div class="mapa-col @liquidezClass @colTotal @classHidden">
                            @(string.IsNullOrWhiteSpace(classHidden) ? liquidez.ToString("N2") : "000,00")
                        </div>
                    }
                </div>

            </div>

            <!-- BODY -->
            <div class="mapa-body">
                @foreach (var item in Model.Mapas)
                {
                    string classReceita = item.TipoMovto == LGMPulse.Domain.Enuns.TipoMovtoEnum.Receita ? "receita" : "";
                    <div class="mapa-row">
                        <div class="mapa-col-fixed">
                            <span class="nomeGrupo @classReceita">@item.DescGrupo</span>
                        </div>

                        @for (int i = 0; i < 14; i++)
                        {
                            if (i < 12 && i > Model.LastMonth - 1) continue;
                            string classBold = (i > 11 ? "mapa-col-bold" : "");
                            string colTotal = (i == 12 ? "col-total" : "");
                            string classHidden = i < (Model.FirstMonthToShow - 1) || i > (Model.LastMonthToShow - 1) ? "free-hidden" : "";
                            <div class="mapa-col @classBold @colTotal @classHidden">
                                @(string.IsNullOrWhiteSpace(classHidden) ? item.TotalMes[i].ToString("N2") : "000,00")
                            </div>
                        }
                    </div>
                }
            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        function ShowFreeModeMessage() {
            const titulo = "Sua visão financeira pode ir além";
            const mens = `
                <p>
                    No <strong>Pulse gratuito</strong>, você tem foco total no seu fluxo de
                    caixa imediato, acompanhando de perto o último trimestre. 
                    É o fôlego necessário para o dia a dia.
                </p>

                <p>
                    Na <strong>versão completa</strong>, o Mapa Financeiro revela todos os meses do ano de uma só vez.
                    Compare meses, calcule médias e totais, identifique padrões e tenha a segurança de um planejamento ilimitado.
                    Desbloqueie o horizonte e tenha o <strong>domínio completo</strong> de sua realidade financeira.
                </p>
            `;
            ShowFreeModeModal(titulo, mens);
        }

        $(document).on("click", ".free-hidden", function () {
            ShowFreeModeMessage();
        });

        // Seleciona os cabeçalhos da 1ª linha (Grupo + Meses)
        $(".mapa-header:first .mapa-col").each(function (index) {
            $(this).addClass("sortable").on("click", function () {
                sortMapa(index, $(this));
            });
        });

        function sortMapa(colIndex, $colElement, forceDesc = false) {
            const $body = $(".mapa-body");
            let $rows = $body.find(".mapa-row").get();

            // Alternar direção (ou forçar desc se pedido)
            let asc = forceDesc ? false : !$colElement.hasClass("asc");
            $(".mapa-col").removeClass("asc desc");
            $colElement.addClass(asc ? "asc" : "desc");

            // Ordenar
            $rows.sort(function (a, b) {
                let A = $(a).find(".mapa-col").eq(colIndex).text().trim();
                let B = $(b).find(".mapa-col").eq(colIndex).text().trim();

                // Detecta número
                let numA = parseFloat(A.replace(/\./g, "").replace(",", "."));
                let numB = parseFloat(B.replace(/\./g, "").replace(",", "."));

                if (!isNaN(numA) && !isNaN(numB)) {
                    return asc ? numA - numB : numB - numA;
                }
                return asc ? A.localeCompare(B) : B.localeCompare(A);
            });

            // Reanexa em ordem
            $.each($rows, function (_, row) {
                $body.append(row);
            });
        }

        // Já inicia a tela ordenando pela penúltima coluna (Total)
        let $headers = $(".mapa-header:first .mapa-col");
        let lastIndex = $headers.length - 2; // penúltima coluna visível (Total)
        if (lastIndex >= 0) {
            let $targetHeader = $headers.eq(lastIndex);
            sortMapa(lastIndex, $targetHeader, true); // força decrescente
        }

        localStorage.setItem('ultimoRelatorio', 'mapafinanceiro');

        // em telas menores rolar para a coluna do mês corrente
        if (window.innerWidth < 768) {

            const mesAtual = new Date().getMonth() - 1; // 0 = Jan
            const $scroll = $(".mapa-scroll");

            // pega o header do mês correspondente
            const $colMes = $(".mapa-header:first .mapa-col").eq(mesAtual);

            if ($colMes.length) {
                const offsetLeft = $colMes.position().left;
                const ajusteVisual = 40; // margem pra não colar na borda

                $scroll.animate({
                    scrollLeft: offsetLeft - ajusteVisual
                }, 300);
            }
        }

    });
</script>
