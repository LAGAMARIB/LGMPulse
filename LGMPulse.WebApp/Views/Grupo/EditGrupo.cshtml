@using LGMPulse.Domain.Domains
@using LGMPulse.Domain.Enuns
@model Grupo

@section style {
    <style>
        #EditHeader {
            flex: 0 0 56px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-3);
            background: transparent;
        }

        .form-container {
            max-width: 420px;
            padding: 16px;
        }

        .form-group {
            margin-bottom: 14px;
        }

        .tipo-movto {
            display: flex;
            gap: 10px;
        }

            .tipo-movto.readonly {
                pointer-events: none;
            }

        .tipo-btn {
            flex: 1;
            padding: 12px;
            border-radius: 10px;
            border: 2px solid transparent;
            font-weight: 600;
            cursor: pointer;
            opacity: .65;
            transition: all .2s ease;
        }

            .tipo-btn.receita {
                background: var(--back-btn-receita);
                color: var(--cor-receita);
            }

                .tipo-btn.receita.active {
                    background: var(--cor-receita);
                    border-color: var(--cor-receita);
                    color: var(--branco-neve);
                    opacity: 1;
                }

            .tipo-btn.despesa {
                background: var(--back-btn-despesa);
                color: var(--cor-despesa);
            }

                .tipo-btn.despesa.active {
                    background: var(--cor-despesa);
                    border-color: var(--cor-despesa);
                    color: var(--branco-neve);
                    opacity: 1;
                }

            .tipo-btn.readonly {
                cursor: default;
                opacity: 1;
                box-shadow: none;
            }

        .form-input {
            width: 100%;
            padding: 8px 10px;
            border-radius: 8px;
            border: 1px solid var(--background-border);
        }

        #btnGravar {
            padding: 16px;
            width: 80%;
            background: linear-gradient(145deg, var(--color-green-soft), var(--pulse-green));
            margin: auto;
            margin-top: 16px;
        }

        /* ===== BOTÃO FECHAR ===== */
        #btnFecharForm {
            width: 44px;
            height: 44px;
            padding: 10px;
            border-radius: 12px;
            cursor: pointer;
            background: var(--branco-transparente);
            backdrop-filter: blur(3px);
            box-shadow: 0 6px 14px var(--preto-sombra);
            transition: transform 160ms ease, background 160ms ease, box-shadow 160ms ease, opacity 160ms ease;
        }

            #btnFecharForm:hover {
                background: rgba(255,255,255,0.75);
                opacity: 0.95;
            }

            #btnFecharForm:active {
                transform: scale(0.88) rotate(-6deg);
                box-shadow: 0 3px 8px var(--preto-sombra);
            }
    </style>
}

<div id="EditHeader">
    <strong>@(Model.ID == null ? "Novo grupo" : "Editando " + Model.Descricao)</strong>
    <img class="close-icon" src="/icons/xmark.svg" id="btnFecharForm" />
</div>


<form class="form-container" action="/grupo/save">
    <input type="hidden" name="ID" value="@Model.ID" />
    <input type="hidden" name="ImagePath" value="@Model.ImagePath" />
    <div class="form-group">
        <label for="Natureza">Natureza:</label>
        @if (Model.ID == null)
        {
            <div class="tipo-movto">
                <button type="button"
                        class="tipo-btn receita"
                        data-value="0">
                    Receita
                </button>

                <button type="button"
                        class="tipo-btn despesa"
                        data-value="1">
                    Despesa
                </button>

                <input type="hidden" name="TipoMovto" id="TipoMovto" />
            </div>
        }
        else
        {
            <div class="tipo-movto readonly">
                <div class="tipo-btn @(Model.TipoMovto == TipoMovtoEnum.Receita ? "receita active" : "despesa active") readonly">
                    @(Model.TipoMovto == TipoMovtoEnum.Receita ? "Receita" : "Despesa")
                </div>

                <input type="hidden" name="TipoMovto" id="TipoMovto" value="@Model.TipoMovto" />
            </div>
        }
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <input type="text" id="Descricao"
               name="Descricao"
               class="form-input"
               value="@Model.Descricao"
               required/>
    </div>

    <button type="submit" id="btnGravar">Gravar</button>
</form>

@section script {
    <script>
        $(document).ready(function () {
            $('#btnFecharForm').on('click', function () {
                if (window.history.length > 1) {
                    window.history.back();
                } else {
                    window.location.href = `/Home`;
                }
            });

            $('.tipo-btn').on('click', function () {
                $('.tipo-btn').removeClass('active');
                $(this).addClass('active');

                $('#TipoMovto').val($(this).data('value'));
            });

            $('form').on('submit', function (e) {
                e.preventDefault();

                if (!$('#TipoMovto').val()) {
                    alert('Selecione Receita ou Despesa.');
                    return false;
                }

                const form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method') || 'POST',
                    data: form.serialize(),
                    success: function (result) {
                        window.location.href = "/grupos";
                    }
                })
                .fail(function (xhr) {
                    ExibeErro(xhr);
                });
            });

        });
    </script>
}
