@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Erro";
    var mensagem = ((ViewData["Mensagem"] ?? TempData["Erro"]) ?? ViewBag.Mensagem as string) ?? "Ocorreu um erro inesperado.";
}

<style>
    .error-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 50vh;
        text-align: center;
        padding: 20px;
        background-color: var(--error-bg);
        border: 1px solid var(--error-border-color);
        border-radius: 8px;
        box-shadow: 0px 4px 6px var(--cor-sombra-box);
    }

        .error-container h1 {
            font-size: 2.5rem;
            color: var(--error-title-color);
            margin-bottom: 10px;
        }

        .error-container p {
            font-size: 1.2rem;
            color: var(--color-link);
            margin-bottom: 20px;
        }

        .error-container a {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            color: var(--cor-texto-botao);
            background-color: var(--error-button-bg);
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .error-container a:hover {
                background-color: var(--error-button-hover-bg);
            }
</style>

<div class="error-container">
    <h1>Ops... algo deu errado</h1>
    <p>@mensagem</p>
    <a href="/Home/Index">Voltar à Página Inicial</a>
</div>
