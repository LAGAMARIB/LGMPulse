                gap: 8px;
            }

            .form-group > .form-input {
                width: 100%;
            }

            .form-group > div > .form-input {
                flex: 1;
                width: auto;
            }

            .form-group > div > button {
                flex-shrink: 0;
                width: 38px;
                height: 38px;
                padding: 0;
                text-align: center;
            }

            .form-group .form-inline {
                display: flex;
                flex-direction: row;
                align-items: center;
                gap: 10px;
                flex-wrap: wrap; /* Para garantir responsividade */
            }

                .form-group .form-inline input[type="checkbox"] {
                    margin: 0;
                }

                .form-group .form-inline label {
                    margin: 0;
                    font-weight: bold;
                }

        .form-input {
            flex: 1;
            width: 100%;
            padding: 5px;
            border: 1px solid var(--input-border-color);
            color: var(--color-input-text);
            background-color: var(--color-input-bg);
