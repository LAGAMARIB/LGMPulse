<body class="@classPremium">
    @await Html.PartialAsync("_FreeModeModal");

    <div class="mainContainer">

        <!-- HEADER -->
        <div class="MainHeader">
            <h5>@ViewBag.Title</h5>

            @if (!string.IsNullOrEmpty(ViewBag.Session?.User?.UserName))
            {
                <div class="user-menu">
                    <div class="lgm-dropdown" id="userMenu">
                        <a class="lgm-dropdown-toggle" aria-haspopup="true" aria-expanded="false">
                            <div class="avatar-icon"><i class="fas fa-user"></i></div>
                        </a>
