            }

        .form-buttons {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            padding: 0;
            gap: 10px;
            margin-top: 14px;
        }

        .btn-remover {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            background-color: var(--btn-danger-back);
            color: var(--btn-danger-color);
            flex-shrink: 0; /* não deixa ele diminuir de tamanho */
        }

        .btn-salvar {
            height: 50px;
            border-radius: 10px;
            background-color: var(--btn-success-back);
            color: var(--btn-success-color);
            flex: 1; /* ocupa todo o espaço restante */
        }

        .form-container button {
            width: 48%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-container button.btn-success {
                position: absolute;
                bottom: 0px;
                height: 50px;
                border-radius: 10px;
                background-color: var(--btn-success-back);
                color: var(--btn-success-color);
            }

        .form-container button.btn-danger {
                background-color: var(--btn-danger-back);
                color: var(--btn-danger-color);
            }

        .form-container input[type="checkbox"] {
            width: 25px;
            height: 25px;
            cursor: pointer;
        }

        .form-radio-buttons label {
            display: inline-flex;
            align-items: center;
            margin-right: 25px;
            font-size: 1.1em;
        }

        .form-radio-buttons input[type="radio"] {
            width: 20px;
            height: 20px;
            margin-right: 5px;
            cursor: pointer;
            vertical-align: middle;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 26px;
            margin-right: 10px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

            .slider::before {
                position: absolute;
                content: "";
                height: 20px;
                width: 20px;
                left: 3px;
                bottom: 3px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        .switch input:checked + .slider {
            background-color: #4CAF50;
        }

            .switch input:checked + .slider::before {
                transform: translateX(24px);
            }

