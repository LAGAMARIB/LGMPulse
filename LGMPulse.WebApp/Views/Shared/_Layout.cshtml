        </div>
    </div>

    <!-- SCRIPTS -->
    <script>
        function ExibeErro(xhr) {
            let msg = 'Erro inesperado.';

            if (xhr.responseJSON?.Message) {
                msg = xhr.responseJSON.Message;
            } else if (xhr.responseText) {
                try {
                    const obj = JSON.parse(xhr.responseText);
                    if (obj.Message) msg = obj.Message;
                } catch { }
            }

            alert(msg);
        }

        // Ícones do rodapé
        function DisableIcon(id) {
            $(".mainFooter a").removeClass("disabled");
            $(`.mainFooter a[data-id='${id}']`).addClass("disabled");
        }

        // Compatibility: showModalDialog (substitui versão Bootstrap)
        // usa showFormModal por baixo dos panos para exibir confirmação
        function showModalDialog({ titulo, mensagem, tipo = "info", onConfirm }) {
            // icone por tipo
            let icon = "fas fa-info-circle", btnClass = "primary";
            switch (tipo) {
                case "alertar": icon = "fas fa-exclamation-triangle"; btnClass = "primary"; break;
                case "excluir": icon = "fas fa-trash-alt"; btnClass = "primary"; break;
                case "erro": icon = "fas fa-times-circle"; btnClass = "primary"; break;
                case "confirmar": icon = "fas fa-question-circle"; btnClass = "primary"; break;
                default: icon = "fas fa-info-circle"; btnClass = "primary"; break;
            }

            const content = `<div style="padding:8px 4px;font-size:0.98rem;">${mensagem}</div>`;

            showFormModal({
                titulo: `<i class="${icon} lgm-modal-icon"></i> ${titulo}`,
                bodyHtml: content,
                onSubmit: function () {
                    if (typeof onConfirm === "function") onConfirm();
                },
                options: { 
                    backdropClose: false,  // não fecha clicando fora
                    showCancel: (tipo === "excluir" || tipo === "confirmar"),
                    tipo: tipo
                }
            });
        }

        // showFormModal / hideFormModal (implementação leve; exposta globalmente mais abaixo)
        // OBS: funções reais definidas no bloco inferior (IIFE) para encapsular comportamento.
    </script>

    <script>
        /* Lightweight modal/dropdown JS (no jQuery required but compatible with jQuery usage) */
        (function(){
