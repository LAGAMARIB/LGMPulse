          const $btnCancel = document.getElementById('lgm-modal-cancel');
          const $btnClose = document.getElementById('lgm-modal-close');

          let currentOnSubmit = null;
          let allowBackdropClose = false;

          function showModal({ titulo = '', bodyHtml = '', onSubmit = null, options = {} } = {}) {
            // limpa classes anteriores
            $modal.classList.remove(
                'modal-info',
                'modal-alerta',
                'modal-erro',
                'modal-confirmar',
                'modal-excluir'
            );
            // aplica classe do tipo atual
            if (options.tipo) {
                $modal.classList.add(`modal-${options.tipo}`);
            }

            currentOnSubmit = onSubmit;
            allowBackdropClose = !!options.backdropClose; // default false -> static

            // CONTROLE DO BOTÃO CANCELAR
            if (options.showCancel === false) {
                $btnCancel.style.display = 'none';
            } else {
                $btnCancel.style.display = '';
            }

            // set title (accept HTML)
            if (typeof titulo === 'string') $title.innerHTML = titulo;
            else $title.textContent = String(titulo || '');

            // Accept string or DOM node/jQuery object
            if (typeof bodyHtml === 'string') {
              $body.innerHTML = bodyHtml;
            } else if (bodyHtml instanceof Element) {
              $body.innerHTML = '';
              $body.appendChild(bodyHtml);
            } else if (window.jQuery && bodyHtml instanceof jQuery) {
              $body.innerHTML = '';
              bodyHtml.each(function(){ $body.appendChild(this.cloneNode(true)); });
            } else {
              $body.innerHTML = '';
            }

            $backdrop.classList.add('lgm-show');
            $modal.classList.add('lgm-show');
            $backdrop.setAttribute('aria-hidden','false');
            $modal.setAttribute('aria-hidden','false');

            // focus first input
            setTimeout(()=> {
              const first = $body.querySelector('input,select,textarea,button');
              if (first) first.focus();
            },120);
          }

          function hideModal() {
            $backdrop.classList.remove('lgm-show');
            $modal.classList.remove('lgm-show');
            $backdrop.setAttribute('aria-hidden','false');
            $modal.setAttribute('aria-hidden','false');
            document.activeElement?.blur();
            currentOnSubmit = null;
          }

          // clicks
          $btnClose.addEventListener('click', hideModal);
          $btnCancel.addEventListener('click', hideModal);

          $btnSave.addEventListener('click', function(){
            if (typeof currentOnSubmit === 'function') {
              // collect form values (inputs/selects/textareas with name)
              const formData = {};
              Array.from($body.querySelectorAll('input[name],select[name],textarea[name]')).forEach(el=>{
                formData[el.name] = el.value;
              });
              try { currentOnSubmit(formData); } catch(e){ console.error(e); }
            }
            hideModal();
          });

          // backdrop click (option)
          $backdrop.addEventListener('click', function(){
            if (allowBackdropClose) hideModal();
          });

          // Expose function globally
          window.showFormModal = function(params){
            showModal(params || {});
          };

          window.hideFormModal = hideModal;

          /* Simple dropdown behavior: toggle .lgm-dropdown-menu for .lgm-dropdown-toggle */
          document.addEventListener('click', function(e){
            const toggle = e.target.closest('.lgm-dropdown-toggle');
            if (toggle) {
              e.preventDefault();
              const parent = toggle.closest('.lgm-dropdown, .dropdown') || toggle.parentElement;
              const menu = parent && parent.querySelector('.lgm-dropdown-menu');
              if (menu) {
                menu.classList.toggle('lgm-show');
              }
              // close other menus
              Array.from(document.querySelectorAll('.lgm-dropdown-menu.lgm-show')).forEach(m=>{
                if (m !== menu) m.classList.remove('lgm-show');
              });
              return;
            }
            const clickedLink = e.target.closest('a[href]');
            if (clickedLink) {
              return; // deixa o navegador navegar
            }

            // click outside closes menus
            if (!e.target.closest('.lgm-dropdown, .dropdown')) {
              Array.from( document.querySelectorAll('.lgm-dropdown-menu.lgm-show')).forEach(m=> m.classList.remove('lgm-show'));
            }
          });

        })();
    </script>

    <script>
        // existing helpers (kept mostly unchanged)
        $('form').submit(function () {
            $('[data-mask]').each(function () {
                $(this).val($(this).val().replace('.', ''));
            });
        });

        // tratamento de modo Loading **********
        $(document).on({
            ajaxStart: function () { $("body").addClass("loading"); },
            ajaxStop: function () { $("body").removeClass("loading"); }
        });

        function showLoading() { document.body.classList.add("loading"); }
        function hideLoading() { document.body.classList.remove("loading"); }

        window.addEventListener("beforeunload", showLoading);

        document.addEventListener('click', function (e) {
            const link = e.target.closest("a[href]");
            if (link && !link.hasAttribute("target") 
                     && !link.getAttribute("href").startsWith("#")
                     && !link.hasAttribute("data-no-loading")) {
                showLoading();
            }
        });

        document.addEventListener("submit", function (e) {
            if (!e.target.hasAttribute("data-ajax") && !e.target.hasAttribute("data-no-loading")) {
                showLoading();
            }
        });

        window.addEventListener("pageshow", hideLoading);
        window.addEventListener("load", hideLoading);


        // documento carregado ********************
        $(document).ready(function () {
            $('[data-mask]').each(function () {
                $(this).mask($(this).attr("data-mask"));
            });
            $('[data-mask-reverse]').each(function () {
                $(this).mask($(this).attr("data-mask"), { reverse: true });
            });
            $('.select2').select2();
            $('.select2[multiple]').select2({ allowClear: true });

            $('.custom-toast').each(function (index) {
                let $toast = $(this);
                setTimeout(function () {
                    $toast.addClass('fade-out');
                    setTimeout(function () { $toast.remove(); }, 1000);
                }, 3000 + index * 300);
            });

            const $themeButton = $("#toggle-theme");
            const $body = $("body");

            if (localStorage.getItem("theme") === "dark") {
                $body.addClass("dark-mode");
            }

            $themeButton.on("click", function () {
                $body.toggleClass("dark-mode");
                if ($body.hasClass("dark-mode")) {
                    localStorage.setItem("theme", "dark");
                } else {
                    localStorage.setItem("theme", "light");
                }
            });

            $('#alterar-senha').on('click', function() {
                window.location.href = "/Home/AlterarSenha";
            });
        });
    </script>

