@using LGMDomains.Common.Helpers
@using LGMPulse.Domain.Enuns
@using LGMPulse.WebApp.Models
@model DigitarValorViewModel
@{
    ViewBag.Title = "Digite o valor";
    string tipoLancto = Model.IsAgenda ? "AGENDAR " : "";
    string urlBase = Model.IsAgenda ? "agenda" : "lancamento";

    ViewBag.SubTitle = $"{tipoLancto}{Model.TipoMovto} - {Model.DescGrupo}";

    string subTitleClass = Model.TipoMovto == TipoMovtoEnum.Despesa ? "despesa" : "receita";
    DateTime dataLancto = Model.DataMovto;
    string? urlRetorno = Model.URLRetorno?.Replace('_', '/');
    int valorInicial = Convert.ToInt32( Model.ValorMovto * 100 );
}

@section style {
    <style>
        .value-container {
            text-align: center;
            margin-top: 20px;
        }

        .display-value {
            font-family: 'Digital-7', monospace, sans-serif;
            font-size: 3rem;
            background: #111;
            color: #28f028;
            padding: 12px;
            border-radius: 8px;
            letter-spacing: 2px;
            text-align: right;
            text-shadow: 0 0 4px #0f0;
            transition: all .1s ease-out;
        }

        .keypad {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 14px;
            padding: 10px;
        }

        .key {
            font-size: 28px;
            padding: 20px;
            background: #f0f0f0;
            border-radius: 12px;
            border: none;
            box-shadow: 0 3px 6px rgba(0,0,0,0.15);
            transition: transform 0.12s, background 0.12s;
        }

            .key:active {
                transform: scale(0.92);
                background: #e2e2e2;
            }

        .action-key {
            background: var(--color-sand);
        }

        /* ===== BARRA SUPERIOR FIXA ===== */
        #DigitarHeader {
            flex: 0 0 56px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: var(--space-3);
            background: transparent;
            z-index: 20;
        }

        /* ===== BOTÃO FECHAR ===== */
        #btnFecharForm {
            width: 44px;
            height: 44px;
            padding: 10px;
            border-radius: 12px;
            cursor: pointer;
            background: var(--btn-danger-back);
            color: var(--btn-danger-color);
            backdrop-filter: blur(3px);
            box-shadow: 0 6px 14px var(--preto-sombra);
            transition: transform 160ms ease, background 160ms ease, box-shadow 160ms ease, opacity 160ms ease;
        }

            #btnFecharForm:hover {
                opacity: 0.95;
            }

            #btnFecharForm:active {
                transform: scale(0.88) rotate(-6deg);
                box-shadow: 0 3px 8px var(--preto-sombra);
            }


        #subTitle {
            text-align: center;
            font-size: 2.0rem;
            font-weight: 400;
            margin: 12px 0;
            text-shadow: 1px 2px 3px rgba(0, 0, 0, 1);
        }

            #subTitle.despesa {
                color: var(--pulse-red);
            }

            #subTitle.receita {
                color: var(--pulse-green);
            }

        #btnConfirm {
            width: 80%;
            background: linear-gradient(145deg, var(--color-green-soft), var(--pulse-green));
            margin-top: 20px;
        }

        #btnAdvancedFields {
            position: absolute;
            bottom: 85px;
            right: 15px;
            width: 53px;
            height: 53px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: rgba(0,0,0,0.20);
            backdrop-filter: blur(2px);
            border-radius: 50%;
            border: none;
            cursor: pointer;
            color: white;
            font-size: 1.6rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        }

            #btnAdvancedFields:active {
                transform: scale(0.92);
                background: #e2e2e2;
            }

        input[type="date"]::-webkit-calendar-picker-indicator {
            filter: invert(1);
            opacity: 1;
        }

    </style>
}

<div id="DigitarHeader">
    <div id="subTitle" class="@subTitleClass">@ViewBag.SubTitle</div>
    @if (!string.IsNullOrEmpty(urlRetorno))
    {
        <img class="close-icon" src="/icons/xmark.svg" id="btnFecharForm" />
    }
</div>

<div class="value-container">
    <div id="displayValue" class="display-value">0,00</div>

    <div class="keypad">
        <button class="key" data-digit="1">1</button>
        <button class="key" data-digit="2">2</button>
        <button class="key" data-digit="3">3</button>

        <button class="key" data-digit="4">4</button>
        <button class="key" data-digit="5">5</button>
        <button class="key" data-digit="6">6</button>

        <button class="key" data-digit="7">7</button>
        <button class="key" data-digit="8">8</button>
        <button class="key" data-digit="9">9</button>

        <button class="key action-key" data-action="clear">C</button>
        <button class="key" data-digit="0">0</button>
        <button class="key action-key" data-action="back">&larr;</button>
    
    </div>
    <button class="key" id="btnConfirm">Confirmar</button>
    <button id="btnAdvancedFields"><i class="fas fa-gear"></i></button>
</div>

<div class="form-container" id="divAdvancedFields" style="display: none">
    <div class="form-group">
        <label for="DataMovto">Data:</label>
        <input type="date" id="DataMovto" name="DataMovto"
            value="@dataLancto.Date.ToString("yyyy-MM-dd")" 
            required class="form-input" />
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição:</label>
        <input type="text" id="Descricao" 
            name="Descricao" 
            class="form-input"
            value="@Model.Descricao" />
    </div>
</div>

@section script {
    <script>
        $(document).ready(function () {
            const urlBase = '@urlBase';
            let rawValue = "@valorInicial";
            let descMovto = @Html.Raw(
                    System.Text.Json.JsonSerializer.Serialize(Model.Descricao)
            );
            let dataMovto = "@dataLancto.Date.ToString("yyyy-MM-dd")";

            function updateDisplay() {
                let number = parseInt(rawValue || "0"); // sempre inteiro
                let formatted = (number / 100).toLocaleString("pt-BR", {
                    minimumFractionDigits: 2,
                });

                $("#displayValue")
                    .text(formatted);
            }

            $(".key[data-digit]").on("click", function () {
                const digit = $(this).data("digit");
                rawValue += digit;
                updateDisplay();
            });

            $(".key[data-action='clear']").on("click", function () {
                rawValue = "";
                updateDisplay();
            });

            $(".key[data-action='back']").on("click", function () {
                rawValue = rawValue.slice(0, -1);
                updateDisplay();
            });

            $('#btnAdvancedFields').on('click', function () {
                 const clone = $('#divAdvancedFields')
                                        .clone(true)
                                        .removeAttr('style')
                                        .show();
                 showFormModal({
                    titulo: 'Dados avançados',
                    bodyHtml: clone,
                    onSubmit: (formData) => {
                        descMovto = formData.Descricao;
                        dataMovto = formData.DataMovto;
                        $('#divAdvancedFields #Descricao').val(descMovto);
                        $('#divAdvancedFields #DataMovto').val(dataMovto);
                    }
                 });
            });

            $('#btnFecharForm').on('click', function () {
                window.location.href = `@urlRetorno`;
            });

            $('#btnConfirm').on('click', function (e) {
                e.preventDefault();

                let intNumber = parseInt(rawValue || "0");
                if (intNumber === 0) {
                    alert('Valor deve ser maior que zero.');
                    return false;
                }
                let returnValue = intNumber / 100;

                $(this).prop('disabled', true);

                var objMovto = {
                    ID: parseInt("@Model.ID", null),
                    TipoMovto: parseInt("@((int)Model.TipoMovto)", 10),
                    IDGrupo: parseInt("@Model.IDGrupo", 10),
                    DataMovto: dataMovto,
                    Descricao: descMovto,
                    ValorMovto: returnValue,
                    IsNew: ("@Model.IsNew" == "True"),
                    URLRetorno: "@Model.URLRetorno"
                };

                alert(`/${urlBase}/save`);

                $.ajax({
                    url: `/${urlBase}/save`,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(objMovto),
                    success: function (response) {
                        if (response.RedirectUrl) {
                            window.location.href = response.RedirectUrl;
                        }
                        window.parent.postMessage({
                            action: "closeOverlayAndReload"
                        }, "*");
                    },
                    error: function (xhr, status, error) {
                        console.error('Erro:', error);
                        alert("Erro ao salvar: " + (xhr.responseText || "Erro interno"));
                    }
                });
            });

            updateDisplay();
        });
    </script>
}


